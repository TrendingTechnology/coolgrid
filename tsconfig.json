{
  "compilerOptions": {
    "outDir": "dist/es6",
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts*"],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "build",
    "scripts",
    "tools/*",
    "src/**/*.stories.*",
    "src/**/stories.*",
    "src/**/*.test.*",
    "src/**/__snapshots__/**/*"
  ]
}
